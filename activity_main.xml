<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bkg"
    tools:context=".MainActivity">

    <!--    Animation SignUP   -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="-5dp"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        app:lottie_fileName="new-user.json"
        app:lottie_loop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <TextView-->
<!--            android:id="@+id/Login"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginLeft="55dp"-->
<!--            android:backgroundTint="@color/White"-->
<!--            android:text="SignIn"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="23dp"-->
<!--            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/SignupScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_90sdp"
            android:backgroundTint="@color/White"
            android:text="Smart Dietitian "
            android:layout_marginTop="-7dp"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <EditText
            android:id="@+id/email"
            android:textColor="@color/black"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:maxLength="40"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/_7sdp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:background="@drawable/textview_radius"
            android:hint="Email"
            android:elevation="@dimen/_10sdp"
            />

        <!--    <com.google.android.material.textfield.TextInputLayout-->
        <EditText
            android:id="@+id/passwd"
            android:layout_width="@dimen/_240sdp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/textview_radius"
            android:paddingLeft="@dimen/_7sdp"
            android:singleLine="true"
            android:maxLength="20"
            android:hint="Password"
            android:inputType="textPassword"
            android:elevation="@dimen/_10sdp"
            />

        <EditText
            android:id="@+id/cpassword"
            android:drawableLeft="@drawable/ic_baseline_lock_open_24"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textview_radius"
            android:paddingLeft="@dimen/_7sdp"
            android:singleLine="true"
            android:maxLength="20"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:elevation="@dimen/_5sdp"/>
    </LinearLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_radius2"
        android:text="Sign Up"
        android:textSize="@dimen/_10sdp"
        />

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textAlignment="center"-->
<!--        android:textSize="@dimen/_12sdp"-->
<!--        android:layout_marginTop="@dimen/_10sdp"-->
<!--        android:textColor="@color/black"-->
<!--        android:text="OR"-->
<!--        android:layout_gravity="center"/>-->
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textAlignment="center"-->
<!--        android:textSize="@dimen/_12sdp"-->
<!--        android:textStyle="bold"-->
<!--        android:textColor="@color/black"-->
<!--        android:text="If you have an account"-->
<!--        android:layout_gravity="center"/>-->

    <Button
        android:id="@+id/Login"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_radius2"
        android:text="Sign In "
        android:textSize="@dimen/_10sdp"
        />


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
          />
</LinearLayout>