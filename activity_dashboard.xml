<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="start"
    tools:context=".dashboard_p">

    <RelativeLayout
        android:layout_width="wrap_content"

  android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:title="Navigationvabar"
            app:titleTextColor="@color/teal_200"
            android:background="@color/purple_500"/>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--    Slider   -->
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_marginTop="@dimen/_40sdp"
            />
        <!--    <TextView-->
        <!--        android:id="@+id/text"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="45dp"-->
        <!--        android:background="@color/teal_200"-->
        <!--        android:gravity="center"-->

        <!--        android:text="Smart AI Diet Consultant"-->
        <!--        android:textSize="14dp"-->
        <!--        android:textStyle="bold" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightblue"

            android:orientation="vertical">
            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <!--            1st CardView-->
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="20dp">

                    <ImageButton
                        android:id="@+id/diet"
                        android:layout_width="wrap_content"
                        android:layout_height="125dp"
                        android:background="@drawable/nutriton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_100sdp"
                        android:text="AI Dietitian"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>
                <!--            2nd CardView-->
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_marginLeft="30dp"
                    android:elevation="10dp"

                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="20dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/nutrition"
                        android:layout_width="145dp"
                        android:layout_height="135dp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="online-doctor.json"
                        app:lottie_loop="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="124dp"
                        android:text="Nutrition's"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:background="@color/lightblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <!--            3rd CardView-->
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="20dp">

                    <!--            <ImageView-->
                    <!--                -->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="125dp"-->
                    <!--                app:srcCompat="@drawable/diethistroy"-->
                    <!--                />-->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/diethistory"
                        android:layout_width="145dp"
                        android:layout_height="140dp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="history.json"
                        app:lottie_loop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="122dp"
                        android:text="Diet History"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <!--            4th CardView-->
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_marginLeft="30dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="20dp">

                    <!--            <ImageView-->
                    <!--                android:id="@+id/post"-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="135dp"-->
                    <!--                app:srcCompat="@drawable/pstd"-->
                    <!--                />-->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/post"
                        android:layout_width="145dp"
                        android:layout_height="140dp"
                        android:scaleX="1.5"
                        android:scaleY="2.5"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="timeline.json"
                        app:lottie_loop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="122dp"
                        android:text="Healthy Posts"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:background="@color/lightblue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <!--            5th CardView-->
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="20dp">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/profile"
                        android:layout_width="145dp"
                        android:layout_height="140dp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="new-user.json"
                        app:lottie_loop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="122dp"
                        android:text="Profile"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <!--            6th CardView-->
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_116sdp"
                    android:layout_marginLeft="30dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/White"
                    app:cardCornerRadius="20dp">

                    <!--            <ImageView-->

                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                app:srcCompat="@drawable/feedback"-->
                    <!--                />-->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/feedback"
                        android:layout_width="145dp"
                        android:layout_height="140dp"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="feedback.json"
                        app:lottie_loop="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="122dp"
                        android:text="Feedback"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/sidebar"

        app:itemTextColor="@color/white"
        android:background="@color/red"
        app:headerLayout="@layout/navi"
        android:layout_gravity="start"
        android:id="@+id/navi"/>

</androidx.drawerlayout.widget.DrawerLayout>
