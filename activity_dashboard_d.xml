<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="start"

    tools:context=".Dashboard_d">

    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:title="Navigationvabar"
            app:titleTextColor="@color/teal_200"
            android:background="@color/purple_500"/>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >
    <!--    Slider   -->
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/_40sdp" />
    <!--    Title   -->
<!--    <TextView-->
<!--        android:id="@+id/text"-->
<!--        android:background="@color/lightblue"-->

<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="45dp"-->
<!--        android:layout_marginTop="@dimen/_10sdp"-->
<!--        android:gravity="center"-->
<!--        android:text="Admin Dashboard"-->
<!--        android:textColor="@color/royalblue"-->
<!--        android:textSize="30dp"-->
<!--        android:textStyle="bold" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblue"

        android:orientation="vertical">
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">

        <!--            1st CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/Aidiet"
                app:lottie_autoPlay="true"
                android:layout_width="145dp"
                android:layout_height="140dp"
                app:lottie_fileName="history.json"
                app:lottie_loop="true"/>
<!--            <ImageView-->
<!--        -->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="125dp"-->
<!--                app:srcCompat="@drawable/diethistroy" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Diet History"
                android:layout_marginTop="124dp"
                android:layout_marginLeft="18dp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>
        <!--            2nd CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:onClick="nutrition"
                android:id="@+id/nutrition"
                app:lottie_autoPlay="true"
                android:layout_width="145dp"
                android:layout_height="140dp"
                app:lottie_fileName="dr-consultation.json"
                app:lottie_loop="true"/>

<!--            <ImageView-->
<!--               -->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="125dp"-->
<!--                app:srcCompat="@drawable/nutrition" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrition"
                android:layout_marginTop="124dp"
                android:layout_marginLeft="45dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <!--            3rd CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="@dimen/_20sdp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/feedback"
                app:lottie_autoPlay="true"
                android:layout_width="145dp"
                android:layout_height="140dp"
                app:lottie_fileName="feedback.json"
                app:lottie_loop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Feedback"
                android:layout_marginTop="118dp"
                android:layout_marginLeft="28dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <!--            4th CardView-->
        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="@color/White"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/post"
                android:onClick="post"
                app:lottie_autoPlay="true"
                android:layout_width="145dp"
                android:layout_height="140dp"
                app:lottie_fileName="upload-literature.json"
                app:lottie_loop="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Healthy Posts"
                android:layout_marginTop="118dp"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menhu"
        app:itemTextColor="@color/white"
        android:background="@color/red"
        app:headerLayout="@layout/admin_navi"
        android:layout_gravity="start"
        android:id="@+id/navi"/>
</androidx.drawerlayout.widget.DrawerLayout>